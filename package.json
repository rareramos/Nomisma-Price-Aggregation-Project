{
  "name": "price-aggregator",
  "version": "0.0.1",
  "description": "Price Aggregation for Derivatives",
  "main": "index.js",
  "scripts": {
    "install:client": "yarn --cwd client install",
    "install:db": "yarn --cwd db install",
    "install:fetcher": "yarn --cwd fetcher install",
    "install:server": "yarn --cwd server install",
    "install:pubsub": "yarn --cwd pubsub install",
    "install:all": "yarn install & yarn install:client && yarn install:db && yarn install:fetcher && yarn install:server && yarn install:pubsub",
    "lint:client": "yarn --cwd client lint --fix",
    "lint:db": "yarn --cwd db lint",
    "lint:fetcher": "yarn --cwd fetcher lint",
    "lint:server": "yarn --cwd server lint",
    "lint:pubsub": "yarn --cwd pubsub lint",
    "lint:all": "yarn lint:client && yarn lint:db && yarn lint:fetcher && yarn lint:server && yarn lint:pubsub",
    "format:markdown": "prettier --parser markdown --write ./*.md ./**/*.md",
    "build:client": "yarn --cwd client build",
    "build:db": "yarn --cwd db build",
    "build:all": "yarn build:client && yarn build:db",
    "test:all": "yarn test:client && yarn test:server && yarn test:pubsub && yarn test:fetcher",
    "test:fetcher": "yarn --cwd fetcher test:mocha",
    "test:server": "yarn --cwd server test",
    "test:pubsub": "yarn --cwd pubsub test",
    "test:client": "yarn --cwd client test",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "update": "^0.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test:all"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "yarn lint:client",
        "yarn lint:server",
        "yarn lint:fetcher",
        "yarn lint:pubsub",
        "yarn lint:db",
        "git add"
      ],
      "*.{ts,tsx}": [
        "yarn lint:client",
        "yarn lint:pubsub",
        "yarn lint:server",
        "git add"
      ],
      "*.md": [
        "yarn format:markdown",
        "git add"
      ]
    },
    "ignore": [
      "**/lib/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NomismaTech/price-aggregation.git"
  },
  "keywords": [
    "react"
  ],
  "license": "MIT",
  "homepage": "https://github.com/NomismaTech/price-aggregation#readme"
}
