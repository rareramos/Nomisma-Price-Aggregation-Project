{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "./lib/",
    "types" : ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/__tests__/*.ts",
    "**/__mocks__/*.ts"
  ],
  "include": [
        "src/**/*"
  ]
}
